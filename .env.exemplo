# ============================================
# CONFIGURAÇÃO DE IDENTIFICAÇÃO DO CLIENTE
# ============================================
# Esta variável torna todos os recursos únicos por cliente
# Exemplos: cliente1, acme, empresa-teste, cabana-eco
# Será usada para: containers, volumes, redes e imagens
REDE_INTERNA=nome-do-cliente

# ============================================
# CONFIGURAÇÕES DA APLICAÇÃO
# ============================================
APP_NAME="Krayin CRM"
APP_URL=https://crm.seudominio.com.br
APP_KEY=base64:SuaChaveGeradaPeloLaravel
APP_CURRENCY=BRL
USER=www-data

# ============================================
# BANCO DE DADOS
# ============================================
DB_CONNECTION=mysql
DB_HOST=krayin-mysql
DB_PORT=3306
DB_DATABASE=krayin_crm
DB_USERNAME=krayin_user
DB_PASSWORD=SenhaSuperSegura123!

# ============================================
# SEGURANÇA / SESSÃO
# ============================================
SANCTUM_STATEFUL_DOMAINS=crm.seudominio.com.br
SESSION_SECURE_COOKIE=true

# ============================================
# CONFIGURAÇÕES DE E-MAIL (SMTP)
# ============================================
# Para usar MailHog (desenvolvimento/testes):
# MAIL_MAILER=smtp
# MAIL_HOST=krayin-mailhog
# MAIL_PORT=1025
# MAIL_ENCRYPTION=null
# MAIL_USERNAME=null
# MAIL_PASSWORD=null

# Para usar SMTP real (produção):
MAIL_MAILER=smtp
MAIL_HOST=mail.seudominio.com.br
MAIL_PORT=465
MAIL_USERNAME=seu-email@seudominio.com.br
MAIL_PASSWORD=SuaSenhaDeEmail
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=seu-email@seudominio.com.br
MAIL_FROM_NAME="Seu CRM"
